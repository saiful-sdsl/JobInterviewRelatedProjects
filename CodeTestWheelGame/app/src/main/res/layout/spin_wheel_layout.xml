<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.saiful.codetestwheelgame.ui.gamescreen.spinwheel.SpinWheelView
        android:id="@+id/spinWheelView"
        android:layout_marginLeft="@dimen/spin_wheel_view_margin"
        android:layout_marginRight="@dimen/spin_wheel_view_margin"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@+id/imgSpinWheelStopper"
        android:layout_marginTop="@dimen/spin_wheel_view_top_margin"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imgSpinWheelStopper"
        android:layout_width="@dimen/wheel_stopper_image_width"
        android:layout_height="@dimen/wheel_stopper_image_height"
        android:src="@drawable/spin_wheel_stopper"
        app:layout_constraintStart_toStartOf="@+id/spinWheelView"
        app:layout_constraintEnd_toEndOf="@+id/spinWheelView"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>