<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinAssignmentRaiseTheCloche" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_icon</item>
        <item name="windowSplashScreenAnimationDuration">20000</item>
        <item name="postSplashScreenTheme">@style/Theme.KotlinAssignmentRaiseTheCloche</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_200</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/purple_200</item>
        <item name="android:navigationBarColor">@color/purple_200</item>
    </style>

</resources>